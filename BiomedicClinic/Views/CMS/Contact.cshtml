@{
    @model  BiomedicClinic.Core.ViewModels.PageContentViewModel
    Layout = null;
    string canonicalUrl = "https://www.biomedic.co.uk" + Model.PageUrl;
}

<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>Biomedic Clinic - @Model.PageTitle</title>
    <meta name="description" content="@Model.MetaDescription">
    <meta name="keywords" content="@Model.MetaKeywords">
    <meta property="og:image" content="https://www.biomedic.co.uk/Content/images/logo.png">
    <meta property="og:image:type" content="image/png">
    <link href="@canonicalUrl" rel="canonical" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#0153cc">
    <meta name="msapplication-TileColor" content="#2d89ef">
    <meta name="theme-color" content="#ffffff">
    <meta property="og:url" content="@canonicalUrl" />
    <meta property="og:title" content="@Model.PageTitle" />
    <meta property="og:description" content="@Model.MetaDescription" />
    <meta property="og:image:alt" content="@Model.PageTitle" />
    <meta property="og:type" content="website" />
    <link href="~/Content/blankcss.min.css" rel="stylesheet" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 p-0">
                @Html.Action("GetSideMenuItems", "CMS")
            </div>
            <div class="col-xl-9 p-0">
                <div class="inner-header">
                    <img src="~/@Model.ImageToShow" alt="@Model.PageTitle" />
                    @Html.Action("GetTopMenuItems", "CMS")
                </div>
                <div class="row">
                    <div class="col-xl-5 col-sm-8">
                        <h1 class="page-header">@Html.Raw(Model.Content2)</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-6 col-lg-8">
                        <article class="page-content">
                            @Html.Raw(Model.Content1)
                            <div class="pt-5">
                                <p>To get in touch with us or to book an appointment, please fill in the form below.</p>
                                <div class="cotnact-page-form-con container-fluid">
                                    <form action="/leads/contact/sendmessage" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#MessageCont" id="contactForm" method="post">
                                        <div class="row" id="MessageCont">
                                            <div class="col-sm-6 px-2">
                                                <div class="form-group">
                                                    <input type="text" class="form-control required" name="FirstName" id="FirstName" placeholder="First Name">
                                                </div>
                                            </div>
                                            <div class="col-sm-6 px-2">
                                                <div class="form-group">
                                                    <input type="text" class="form-control required" name="LastName" id="LastName" placeholder="Last Name">
                                                </div>
                                            </div>
                                            <div class="col-sm-6 px-2">
                                                <div class="form-group">
                                                    <input type="text" class="form-control required" name="EmailAddress" id="EmailAddress" placeholder="E-mail">
                                                </div>
                                            </div>
                                            <div class="col-sm-6 px-2">
                                                <div class="form-group">
                                                    <input type="text" class="form-control required" name="PhoneNumber" id="PhoneNumber" placeholder="Phone number">
                                                </div>
                                            </div>
                                            <div class="col-12 px-2 mb-4">
                                                <div class="form-group">
                                                    <textarea class="form-control" name="Note" id="Note" placeholder="Note"></textarea>
                                                </div>
                                            </div>
                                            <div class="col-12 text-center">
                                                <button type="submit" class="btn button">send email</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </article>
                    </div>
                    <div class="col-xl-5 col-lg-4">
                        @*<address><b>Address:</b> 23 Manchester Street, London, W1U 4DJ</address>*@
                        <div class="contact-page-map">
                            <div id="map"></div>
                        </div>
                        <div class="py-4">
                            @Model.Content3
                        </div>
                        <aside class="related-pages">
                            @foreach (var page in Model.RelatedPages)
                            {
                                string pageNewTab = "";
                                string pageUrl = "";
                                if (page.OpenPageInNewTab)
                                {
                                    pageNewTab = "target='_blank'";
                                }
                                else
                                {
                                    pageNewTab = "";
                                }
                                if (string.IsNullOrEmpty(page.PageExternalUrl))
                                {
                                    pageUrl = page.PageUrl;
                                }
                                else
                                {
                                    pageUrl = page.PageExternalUrl;
                                }
                                <a href="@pageUrl" @pageNewTab>@page.MenuName</a>
                            }
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_FooterPartial")
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZ9ITEowmHPfUzKt0uM8eMCJi4sqKVozs&libraries=places"></script>
    <script src="~/Scripts/contactpagejs.min.js"></script>
    <script type="application/ld+json">
        {
        "@@context": "https://schema.org",
        "@@type": "MedicalClinic",
        "name": "Biomedic Clinic",
        "image": "https://www.biomedic.co.uk/Content/images/logo.png",
        "@@id": "https://www.biomedic.co.uk/",
        "url": "https://www.biomedic.co.uk/",
        "telephone": "+44 (0)20 7935 6866",
        "address": {
        "@@type": "PostalAddress",
        "streetAddress": "23 Manchester Street",
        "addressLocality": "London",
        "postalCode": "W1U 4DJ",
        "addressCountry": "GB"
        },
        "geo": {
        "@@type": "GeoCoordinates",
        "latitude": 51.5195421,
        "longitude": -0.1542414
        },
        "openingHoursSpecification": [{
        "@@type": "OpeningHoursSpecification",
        "dayOfWeek": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday"
        ],
        "opens": "09:00",
        "closes": "21:00"
        },{
        "@@type": "OpeningHoursSpecification",
        "dayOfWeek": "Saturday",
        "opens": "10:00",
        "closes": "15:00"
        }]
        }
    </script>
</body>

</html>