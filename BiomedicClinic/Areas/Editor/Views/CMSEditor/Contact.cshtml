@{
    @model  BiomedicClinic.Areas.Editor.ViewModels.EditPageContentViewModel
    Layout = null;
}

<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>Edit page - @Model.PageTitle</title>

    <link href="~/Content/blankcss.min.css" rel="stylesheet" />
    <link href="~/Areas/Editor/Content/editor.css" rel="stylesheet" />
</head>

<body>
    @using (Html.BeginForm("SaveCMSPageContent", "CMSEditor", FormMethod.Post, new { area = "Editor" }))
    {
        @Html.HiddenFor(m => Model.Id)
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-3 p-0">
                    @Html.Action("GetSideMenuItems", "CMSEditor")
                </div>
                <div class="col-xl-9 p-0">
                    <div class="inner-header">
                        <img src="~/Content/images/bioreg-page-bg.jpg" alt="@Model.PageTitle" />
                        @Html.Action("GetTopMenuItems", "CMSEditor")
                    </div>
                    <div class="row">
                        <div class="col-xl-6 col-sm-8">
                            <h1 class="page-header">@Html.TextAreaFor(m => Model.Content2, new { @id = "editorArea2" })</h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6 col-sm-8">
                            <article class="page-content">
                                @Html.TextAreaFor(m => m.Content1, new { @id = "editorArea" })
                                <div class="pt-5">
                                    <p>To get in touch with us or to book an appointment, please fill in the form below.</p>
                                    <div class="cotnact-page-form-con container-fluid">
                                        <div id="contactForm">
                                            <div class="row" id="MessageCont">
                                                <div class="col-sm-6 px-2">
                                                    <div class="form-group">
                                                        <input type="text" class="form-control required" name="FirstName" id="FirstName" placeholder="First Name">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 px-2">
                                                    <div class="form-group">
                                                        <input type="text" class="form-control required" name="LastName" id="LastName" placeholder="Last Name">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 px-2">
                                                    <div class="form-group">
                                                        <input type="text" class="form-control required" name="EmailAddress" id="EmailAddress" placeholder="E-mail">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 px-2">
                                                    <div class="form-group">
                                                        <input type="text" class="form-control required" name="PhoneNumber" id="PhoneNumber" placeholder="Phone number">
                                                    </div>
                                                </div>
                                                <div class="col-12 px-2 mb-4">
                                                    <div class="form-group">
                                                        <textarea class="form-control" name="LastName" id="Note" placeholder="Note"></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-12 text-center">
                                                    <button type="submit" class="btn button">Send Email</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </div>
                        <div class="col-xl-5 col-sm-4">
                            <address><b>Address:</b> 23 Manchester Street, London, W1U 4DJ</address>
                            <div class="contact-page-map">
                                <div id="map"></div>
                            </div>
                            <div class="py-4">
                                @Html.TextAreaFor(m => m.Content3, new { @id = "editorArea3" })
                            </div>
                            <aside class="related-pages">
                                @foreach (var page in Model.RelatedPages)
                                {
                                    string pageNewTab = "";
                                    string pageUrl = "";
                                    if (page.OpenPageInNewTab)
                                    {
                                        pageNewTab = "target='_blank'";
                                    }
                                    else
                                    {
                                        pageNewTab = "";
                                    }
                                    if (string.IsNullOrEmpty(page.PageExternalUrl))
                                    {
                                        pageUrl = "/editor/CMSEditor/ReturnCMSPageEdit" + page.PageUrl;
                                    }
                                    else
                                    {
                                        pageUrl = page.PageExternalUrl;
                                    }
                                    <a href="@pageUrl" @pageNewTab>@page.MenuName</a>
                                }
                            </aside>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @Html.Partial("_FooterPartial")
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-block btn-success btn-save-editor"><i class="fa fa-check" aria-hidden="true"></i></button>
    }

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZ9ITEowmHPfUzKt0uM8eMCJi4sqKVozs&libraries=places"></script>
    <script src="~/Scripts/contactpagejs.min.js"></script>

    @*EDITOR SCRIPTS*@
    <script src="~/Areas/Editor/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Areas/Editor/Content/ckeditor/config.js"></script>
    <script src="~/Areas/Editor/Content/editor.js"></script>

</body>

</html>